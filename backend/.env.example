# Lingua API Environment Variables

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/lingua?schema=public"

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Apple Sign In (for production)
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Google Sign In (for production)
GOOGLE_CLIENT_ID=

# Apple App Store (for IAP verification)
APPLE_SHARED_SECRET=

# Google Play (for purchase verification)
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=
